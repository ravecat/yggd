{
  "name": "ash_framework",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ash_framework/lib",
  "projectType": "application",
  "namedInputs": {
    "production": [
      "default",
      "!{projectRoot}/**/*_test.exs",
      "!{projectRoot}/**/*.spec.exs",
      "!{projectRoot}/test/**/*"
    ]
  },
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix phx.server",
        "cwd": "apps/ash_framework"
      },
      "dependsOn": ["setup"],
      "continuous": true
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix setup",
        "cwd": "apps/ash_framework"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix deploy",
        "cwd": "apps/ash_framework"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/lib/**/*.ex",
        "{projectRoot}/lib/**/*.exs",
        "{projectRoot}/mix.exs",
        "{projectRoot}/mix.lock",
        "{projectRoot}/config/**/*.exs",
        "{projectRoot}/assets/**/*",
        "!{projectRoot}/assets/node_modules/**/*"
      ],
      "outputs": ["{projectRoot}/_build", "{projectRoot}/priv/static"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix test",
        "cwd": "apps/ash_framework"
      },
      "cache": true,
      "dependsOn": ["build"],
      "inputs": ["default", "{projectRoot}/test/**/*.exs"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mix format",
          "prettier --write assets"
        ],
        "cwd": "apps/ash_framework",
        "parallel": false
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mix format --check-formatted",
          "prettier --check assets"
        ],
        "cwd": "apps/ash_framework",
        "parallel": false
      },
      "cache": true
    },
    "ash-codegen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ash.codegen",
        "cwd": "apps/ash_framework"
      }
    },
    "ash-typescript": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ash_typescript.codegen",
        "cwd": "apps/ash_framework"
      },
      "outputs": ["{projectRoot}/assets/js/ash_rpc.ts"]
    },
    "codegen:openapi": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mix openapi.spec.json --spec AshFrameworkWeb.AshJsonApiRouter && mv openapi.json ../../",
          "mix openapi.spec.yaml --spec AshFrameworkWeb.AshJsonApiRouter && mv openapi.yaml ../../"
        ],
        "cwd": "apps/ash_framework",
        "parallel": true
      },
      "outputs": ["{workspaceRoot}/openapi.json", "{workspaceRoot}/openapi.yaml"]
    },
    "db-reset": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ash.reset",
        "cwd": "apps/ash_framework"
      }
    },
    "db-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ash.migrate",
        "cwd": "apps/ash_framework"
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix seed.posts",
        "cwd": "apps/ash_framework"
      },
      "dependsOn": ["setup"]
    },
    "assets-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix assets.build",
        "cwd": "apps/ash_framework"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/assets/**/*",
        "!{projectRoot}/assets/node_modules/**/*"
      ],
      "outputs": ["{projectRoot}/priv/static"]
    }
  },
  "tags": ["backend", "elixir", "phoenix", "ash"]
}
