{
  "name": "phoenix_framework",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/phoenix_framework/lib",
  "projectType": "application",
  "namedInputs": {
    "production": [
      "default",
      "!{projectRoot}/**/*_test.exs",
      "!{projectRoot}/**/*.spec.exs",
      "!{projectRoot}/test/**/*"
    ]
  },
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix serve",
        "cwd": "apps/phoenix_framework",
        "color": true
      },
      "continuous": true
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix start",
        "cwd": "apps/phoenix_framework",
        "color": true
      },
      "continuous": true
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix setup",
        "cwd": "apps/phoenix_framework"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix deploy",
        "cwd": "apps/phoenix_framework"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/lib/**/*.ex",
        "{projectRoot}/lib/**/*.exs",
        "{projectRoot}/mix.exs",
        "{projectRoot}/mix.lock",
        "{projectRoot}/config/**/*.exs",
        "{projectRoot}/assets/**/*",
        "!{projectRoot}/assets/node_modules/**/*"
      ],
      "outputs": ["{projectRoot}/_build", "{projectRoot}/priv/static"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix test",
        "cwd": "apps/phoenix_framework"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/lib/**/*.ex",
        "{projectRoot}/lib/**/*.exs",
        "{projectRoot}/test/**/*.exs"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix format --check-formatted",
        "cwd": "apps/phoenix_framework"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix format",
        "cwd": "apps/phoenix_framework"
      }
    },
    "db:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ecto.create",
        "cwd": "apps/phoenix_framework"
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ecto.migrate",
        "cwd": "apps/phoenix_framework"
      }
    },
    "db:reset": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mix ecto.reset",
        "cwd": "apps/phoenix_framework"
      }
    }
  },
  "tags": ["phoenix", "elixir", "backend"]
}
