{
  "name": "nextjs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nextjs/src",
  "projectType": "application",
  "namedInputs": {
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.[jt]s"
    ]
  },
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev --webpack",
        "cwd": "apps/nextjs"
      },
      "continuous": true
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev --webpack",
        "cwd": "apps/nextjs"
      },
      "continuous": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/nextjs"
      },
      "cache": true,
      "inputs": ["production", "^production"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write .",
        "cwd": "apps/nextjs"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check .",
        "cwd": "apps/nextjs"
      },
      "cache": true,
      "inputs": ["production", "^production"]
    },
    "build": {
      "cache": true,
      "outputs": [
        "{projectRoot}/.next",
        "!{projectRoot}/.next/standalone"
      ]
    }
  },
  "tags": []
}
