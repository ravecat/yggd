# Next.js Environment Variables
# This file contains default values for all environments
# Override these in .env.local (not committed) or .env.development/.env.production

# Auth Service URL (backend API)
NEXTJS_AUTH_SERVICE_URL=http://localhost:4000

# Application URL (frontend)
NEXTJS_APP_URL=http://localhost:3000

# Public API URL (for client-side API calls)
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# Phoenix WebSocket URL (for real-time connections)
NEXT_PUBLIC_PHOENIX_URL=ws://localhost:4001/socket

# JWT Token Signing Secret (must match backend TOKEN_SIGNING_SECRET)
