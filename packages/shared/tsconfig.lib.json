{
  "compilerOptions": {
    "composite": true,
    "declarationMap": false,
    "sourceMap": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "ES2020", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "react"
    ],
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
